-var full_1 = '5 400р.'
-var  full_2 = '10 900р.'

-var  sale_1 = '500р.'
-var  sale_2 = '1 000р.'

-var  today_1 = '4 900р.'
-var today_2 = '9 900р.'

-var link_1 = 'https://shop.mastervision.su/?r=ordering/cart/as1&id=4720&clean=true&lg=ru'
-var link_2 = 'https://shop.mastervision.su/?r=ordering/cart/as1&id=4722&clean=true&lg=ru'

-var prep = 'https://shop.mastervision.su/?r=ordering/cart/as1&id=4165&clean=true&lg=ru'

section#prices
	.container
		+gt('','Выберите свой пакет участия:')
		.packets
			.row
				.col-md-6.col-sm-6
					.packet
						.packet-head
							h4.packet-head-title 
								small пакет
								| Стандарт
						.packet-body
							p.packet-body-text 4 занятия
							p.more-button(data-toggle="modal" data-target="#lessons") подробнее
							p.packet-body-text домашние задания
							p.packet-body-text обратная связь
						.packet-footer
							p.cost.cost-full Стоимость:
								span= full_1
							p.cost.cost-sale Скидка:
								span#sale-1= sale_1
							p.cost.cost-today Стоимость сегодня:
								span#today-1= today_1
							a.button.button-cost(href= link_1 target="_blank")#link-1 Выбрать
				.col-md-6.col-sm-6
					.packet
						.packet-head
							h4.packet-head-title 
								small пакет
								| VIP
						.packet-body
							p.packet-body-text 4 занятия
							p.more-button(data-toggle="modal" data-target="#lessons") подробнее
							p.packet-body-text домашние задания
							p.packet-body-text обратная связь
							p.packet-body-text личная консультация от Анны Ролевой или вероники Юриной (1 час)
						.packet-footer
							p.cost.cost-full Стоимость:
								span= full_2
							p.cost.cost-sale Скидка:
								span#sale-2= sale_2
							p.cost.cost-today Стоимость сегодня:
								span#today-2= today_2
							a.button.button-cost(href= link_2  target="_blank")#link-2 Выбрать
			.prepayment.hide
				h4.prepayment-title Акция!!!
				p.prepayment-text Платите 500р., бонусом получаете 
					span#prepayment-bonus 500р.
					br
					| На счет зачисляется 
					span#prepayment-credited 1 000р.
				a.button.prepayment-button(href= prep target="_blank")#prepayment-link Оплатить 500р.
		.timer
			h4.timer-title Скидка уменьшится через:
			.clock
			.clock-stop