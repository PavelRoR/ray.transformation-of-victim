#main
	padding 0 0 60px
	position relative
	text-align: center
	background-color #EDE4E5
	background-image url(../img/main_bg.jpg)
	background-repeat no-repeat
	background-position: center
	background-size: cover
	color: #fff
	&:before
		content: ''
		display block
		position: absolute
		top 0
		left 0
		right 0
		bottom 0
		width 100%
		height 100%
		background-color: rgba(0,0,0,.6)
		z-index 0
	.container
		position relative
		z-index 9
.title-container
	position relative
	padding 20px 0 30px
	margin 20px 0 40px
	&:before
		@extend #main:before
		background-color: rgba(0,0,0,.7)
.main-title
	font-size: 60px
	font-family: Ga
	color: mBl
	font-weight: bold
.main-subtitle
	font-size: 30px
	text-transform: uppercase
	margin-top: 15px
	span
		color: bl
.main-info
	font-size: 22px
	span
		font-family: RoBo
		font-size: 24px
		display: inline-block
		margin-bottom: 20px
		color: bl
.button-main
	margin-top: 30px