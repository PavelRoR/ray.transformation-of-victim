*
	margin 0
	padding 0
	outline none
body
	font-size: 18px
	font-family: Ro
	line-height: 1.3
a
	color: #fefefe
	&:focus
		outline: 0
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 3px
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
.general-title
	text-align: center
	font-family: RoB
	font-size: 32px
	margin-bottom: 30px
	color: bl
.button
	display block
	text-align: center
	margin 0 auto
	border-radius: 3px
	color: #fff
	background-color: mBl
	box-shadow: 0 4px 0  2px bl
	font-family: RoBo
	transition: all .3s ease
	text-decoration: none
	width 100%
	max-width 280px
	line-height: 45px
	&:focus
		text-decoration: none
		color #fff
	&:hover
		text-decoration: none
		color: #fff
		box-shadow: 0 0 0 0 bl
		transform: translateY(4px)

